    <script>
        // Create glitter effect
        function createGlitter() {
            const glitterBg = document.getElementById('glitter-bg');
            const glitterCount = 80;
            
            for (let i = 0; i < glitterCount; i++) {
                const glitter = document.createElement('div');
                glitter.classList.add('glitter');
                
                // Random position
                glitter.style.left = `${Math.random() * 100}%`;
                glitter.style.top = `${Math.random() * 100}%`;
                
                // Random size
                const size = Math.random() * 6 + 2;
                glitter.style.width = `${size}px`;
                glitter.style.height = `${size}px`;
                
                // Random color
                const colors = ['#ffccff', '#ff99cc', '#ff66cc', '#cc99ff', '#ffffff'];
                const color = colors[Math.floor(Math.random() * colors.length)];
                glitter.style.backgroundColor = color;
                glitter.style.boxShadow = `0 0 10px 2px ${color}`;
                
                // Random animation delay and duration
                glitter.style.animationDelay = `${Math.random() * 5}s`;
                glitter.style.animationDuration = `${Math.random() * 3 + 3}s`;
                
                glitterBg.appendChild(glitter);
            }
        }
        
        // Add petal animation on hover
        document.querySelectorAll('.rose').forEach(rose => {
            rose.addEventListener('mouseenter', function() {
                const petals = this.querySelectorAll('.petal');
                petals.forEach(petal => {
                    petal.style.transform = `${petal.style.transform} scale(1.1)`;
                });
            });
            
            rose.addEventListener('mouseleave', function() {
                const petals = this.querySelectorAll('.petal');
                petals.forEach(petal => {
                    petal.style.transform = petal.style.transform.replace('scale(1.1)', '');
                });
            });
        });
        
        // Initialize when page loads
        window.addEventListener('DOMContentLoaded', () => {
            createGlitter();
            
            // Add a little interactive message
            setTimeout(() => {
                alert("Happy Rose Day, Puchkaa! üíñ Each rose represents my love for you - beautiful, unique, and forever blooming!");
            }, 1000);
        });
    </script>
